    <groupId>demo.ignat</groupId>
    <artifactId>spring-microservices-in-action</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>spring-microservices-in-action</name>
    <description>Demo project for grokking Microservices based on Spring Microservices in Action, Second Edition by John
        Carnell and Illary Huaylupo SÃ¡nchez.
    </description>
    <packaging>pom</packaging>

    <properties>
        <java.version>17</java.version>
        <docker.image.prefix>microservices-in-action</docker.image.prefix>
    </properties>

    <modules>
        <module>license-service</module>
    </modules>


        <dependencies>
            <!--
            <dependency>
                <groupId>org.springframework.boot</groupId>
